<Window x:Class="ArrayListApp_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArrayListApp_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Add" HorizontalAlignment="Left" Height="38" Margin="122,290,0,0" VerticalAlignment="Top" Width="121" FontSize="16" FontWeight="Bold" Click="Click_Add"/>
        <Button Content="Show All" HorizontalAlignment="Center" Height="38" Margin="0,290,0,0" VerticalAlignment="Top" Width="120" FontSize="16" FontWeight="Bold" Click="Show_All"/>
        <Button Content="Remove" HorizontalAlignment="Left" Height="38" Margin="544,290,0,0" VerticalAlignment="Top" Width="122" FontSize="16" FontWeight="Bold" Click="Remove_Text"/>
        <TextBox x:Name="TextBox_Data" HorizontalAlignment="Left" Height="111" Margin="122,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="544" FontSize="16"/>

    </Grid>
</Window>
